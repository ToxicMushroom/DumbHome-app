<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="sync"
        app:title="@string/sync_title"
        android:summary="If the app should check for changes and notify you."
    />


    <PreferenceCategory
        android:title="Account">

        <EditTextPreference
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username"
            android:key="username"
            android:summary="Username for authorizing with the server."
        />
        <EditTextPreference
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Token"
            android:key="token"
            android:summary="Token for authorizing with the server."
        />
    </PreferenceCategory>

